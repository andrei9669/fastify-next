{
  "compilerOptions": {
    "lib": ["dom", "ES2021"],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "build", "public", "dist", ".next", "out", "*.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
